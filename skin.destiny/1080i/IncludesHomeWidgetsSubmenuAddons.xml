<?xml version="1.0" encoding="UTF-8"?>
<includes>
  <include name="HomeWidgetsSubmenuAddons">	 	  	
	<control type="group">
	  <left>0</left>
	  <top>0</top>	
	  <visible>ControlGroup(9001).HasFocus | ControlGroup(9010).HasFocus | Control.HasFocus(43445)</visible>
	  <visible>Container(9000).Hasfocus(1) | Container(9000).Hasfocus(2)</visible>
	  <include>widget_inzoom_submenu</include>
	  <control type="panel" id="43445">
          <left>60</left>
		  <top>380</top>
		  <width>1300</width>
		  <height>500</height>
          <onleft>9000</onleft>
          <onright>9001</onright>
		  <onup>43445</onup>
          <ondown>43445</ondown>
          <viewtype>list</viewtype>
		  <orientation>vertical</orientation>
          <focusposition>0</focusposition>
          <pagecontrol>-</pagecontrol>
          <scrolltime>500</scrolltime>
          <itemlayout width="200" height="250">
		    <control type="image">
			  <left>0</left>
			  <top>0</top>
			  <width>200</width>
			  <height>250</height>
			  <texture background="true">skin/button_klein_tranz70.png</texture>
			  <bordertexture border="10">ThumbShadow.png</bordertexture>
			  <bordersize>6</bordersize>
			  <colordiffuse>$VAR[ColorButtonDialogeBack]</colordiffuse>
			</control>
		    <control type="image">
			  <left>12</left>
			  <top>12</top>
			  <width>176</width>
			  <height>100</height>
			  <texture background="true">$INFO[ListItem.Thumb]</texture>
			  <aspectratio scalediffuse="false" align="left" aligny="top">scale</aspectratio>
			</control>
			<control type="image">
			  <left>15</left>
			  <top>15</top>
			  <width>45</width>
			  <height>45</height>
			  <texture background="true">$INFO[ListItem.Property(ChannelLogo)]</texture>
			  <aspectratio scalediffuse="false" align="left" aligny="top">keep</aspectratio>
			</control>
			<control type="label">
			  <left>15</left>
			  <top>117</top>
			  <height>45</height>
			  <width>166</width>
			  <label>$INFO[ListItem.Property(StartTime)] - $INFO[ListItem.Property(EndTime)]</label>
			  <align>left</align>
			  <aligny>top</aligny>
			  <font>primal_13</font>
			  <textcolor>$VAR[ColorFontSelected]</textcolor>
			  <shadowcolor>$VAR[ColorFontShadow]</shadowcolor>
			  <scroll>false</scroll>
			</control>
			<control type="textbox">
			  <left>15</left>
			  <top>140</top>
			  <height>50</height>
			  <width>166</width>
			  <font>primal_13</font>
			  <align>left</align>
			  <aligny>top</aligny>
			  <shadowcolor>$VAR[ColorFontShadow]</shadowcolor>
			  <label>[COLOR $VAR[ColorFontNormal]]$INFO[ListItem.Label][/COLOR]</label>
			  <autoscroll time="2000" delay="10000" repeat="5000">false</autoscroll>
			</control>			
          </itemlayout>
          <focusedlayout width="200" height="250">
		    <control type="image">
			  <left>0</left>
			  <top>0</top>
			  <width>200</width>
			  <height>250</height>
			  <texture background="true">skin/button_klein_tranz70.png</texture>
			  <bordertexture border="10">ThumbShadow.png</bordertexture>
			  <bordersize>6</bordersize>
			  <colordiffuse>$VAR[BackColorButton]</colordiffuse>
			</control>
			<control type="image">
			  <left>12</left>
			  <top>12</top>
			  <width>176</width>
			  <height>100</height>
			  <texture background="true">$INFO[ListItem.Thumb]</texture>
			  <aspectratio scalediffuse="false" align="left" aligny="top">scale</aspectratio>
			</control>
			<control type="image">
			  <left>15</left>
			  <top>15</top>
			  <width>45</width>
			  <height>45</height>
			  <texture background="true">$INFO[ListItem.Property(ChannelLogo)]</texture>
			  <aspectratio scalediffuse="false" align="left" aligny="top">keep</aspectratio>
			</control>
			<control type="label">
			  <left>15</left>
			  <top>117</top>
			  <height>45</height>
			  <width>166</width>
			  <label>$INFO[ListItem.Property(StartTime)] - $INFO[ListItem.Property(EndTime)]</label>
			  <align>left</align>
			  <aligny>top</aligny>
			  <font>primal_13</font>
			  <textcolor>$VAR[ColorFontSelected]</textcolor>
			  <shadowcolor>$VAR[ColorFontShadow]</shadowcolor>
			  <scroll>false</scroll>
			</control>
			<control type="textbox">
			  <left>15</left>
			  <top>140</top>
			  <height>50</height>
			  <width>166</width>
			  <font>primal_13</font>
			  <align>left</align>
			  <aligny>top</aligny>
			  <shadowcolor>$VAR[ColorFontShadow]</shadowcolor>
			  <label>[COLOR $VAR[ColorFontNormal]]$INFO[ListItem.Label][/COLOR]</label>
			  <autoscroll time="2000" delay="10000" repeat="5000">false</autoscroll>
			</control>			
          </focusedlayout>
			  <content target="pvr">plugin://plugin.service.gto?action=getcontent&amp;ts=$INFO[Window(Home).Property(GTO.timestamp)]</content>
			  <onclick>RunScript(plugin.service.gto,action=infopopup&amp;blob=$INFO[ListItem.Property(BlobId)])</onclick>
        </control>
	  </control>
    </include>

</includes>